    $output .= "<label>&nbsp;</label>
        <button type='submit' class='smcf-button smcf-send' tabindex='1006'>" . t('Send') . "</button>
        <button type='submit' class='smcf-button smcf-cancel modalClose' tabindex='1007'>" . t('Cancel') . "</button>
